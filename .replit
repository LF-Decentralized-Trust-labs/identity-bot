entrypoint = "README.md"
modules = ["python-3.11", "go-1.25"]

[nix]
channel = "stable-24_05"
packages = ["borgbackup", "cargo", "cloudflared", "flutter", "go", "libsodium", "python-3.11", "rustc", "rustup"]

[[ports]]
localPort = 5000
externalPort = 80

[env]
PORT = "5000"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start App"
author = "agent"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Frontend"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash scripts/start-backend.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[userenv]

[userenv.shared]
PORT = "5000"
KERI_HELPER_URL = "https://keri-helper-microservice.replit.app"

[deployment]
deploymentTarget = "autoscale"
build = ["bash", "-c", "cd identity-agent-core && CGO_ENABLED=0 go build -o /home/runner/workspace/bin/identity-agent-core ."]
run = ["bash", "-c", "export FLUTTER_WEB_DIR=/home/runner/workspace/identity_agent_ui/build/web && export APP_STORE_DIR=/home/runner/workspace/app-store-ui && export KERI_DRIVER_SCRIPT=/home/runner/workspace/drivers/keri-core/server.py && /home/runner/workspace/bin/identity-agent-core"]

[agent]
expertMode = true
