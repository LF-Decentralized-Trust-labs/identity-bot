entrypoint = "README.md"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["flutter", "go", "python-3.11", "libsodium", "cloudflared", "rustc", "cargo", "rustup"]

[[ports]]
localPort = 5000
externalPort = 80

[env]
PORT = "5000"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start App"

[[workflows.workflow]]
name = "Start App"
author = "agent"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Frontend"

[userenv]

[userenv.shared]
PORT = "5000"
KERI_HELPER_URL = "https://keri-helper-microservice.replit.app"

[deployment]
deploymentTarget = "cloudrun"
build = "sh ./scripts/build-flutter.sh"
run = "sh ./scripts/start-backend.sh"

[agent]
expertMode = true
