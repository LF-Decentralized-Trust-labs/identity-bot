entrypoint = "README.md"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["flutter", "go", "python-3.11", "libsodium", "cloudflared"]

[[ports]]
localPort = 5000
externalPort = 80

[env]
PORT = "5000"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start App"

[[workflows.workflow]]
name = "Start App"
author = "agent"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Frontend"

[[workflows.workflow]]
name = "Start Backend"
author = "agent"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sh ./scripts/start-backend.sh"
waitForPort = 5000

[[workflows.workflow]]
name = "Start Frontend"
author = "agent"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sh ./scripts/build-flutter.sh"

[userenv]

[userenv.shared]
PORT = "5000"
KERI_HELPER_URL = "https://keri-helper-microservice.replit.app"

[deployment]
deploymentTarget = "cloudrun"
build = "sh ./scripts/build-flutter.sh && cd identity-agent-core && go build -o /home/runner/workspace/bin/identity-agent-core . && cd /home/runner/workspace"
run = "sh ./scripts/start-backend.sh"
